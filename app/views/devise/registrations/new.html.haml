= render "devise/shared/header"
.sign-up
  %h2.sign-up__title 新規登録
  .sign-up__container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      %p アカウント名を入力してください。(最大８文字)
      = f.text_field :name, autofocus: true, placeholder: 'アカウント名', autocomplete: "name", class: "sign-up__container__name"
      %p メールアドレスを入力してください。
      = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', autocomplete: "email", class: "sign-up__container__mail"
      - if @minimum_password_length
      %p パスワードを入力してください。(英数字６文字以上)
      = f.password_field :password_confirmation, placeholder: '再度パスワード', autocomplete: "new-password", class: "sign-up__container__pass"
        = f.password_field :password, placeholder: 'パスワード', autocomplete: "new-password", class: "sign-up__container__pass"
      = f.submit "Sign Up", class: "sign-up__container__btn"