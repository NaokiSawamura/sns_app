= render "devise/shared/header"
.log-in
  %h2.log-in__title ログイン
  .log-in__container
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %P メールアドレスを入力してください。
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', autocomplete: "email", class: "log-in__container__mail"
      %p パスワードを入力してください。
      = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', autocomplete: "email", class: "log-in__container__pass"
      - if devise_mapping.rememberable?
        .log-in__field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log In", class: "log-in__container__btn"
